{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["error", "single"],
//        "comma-dangle": ["error", "always"],
//        "space-in-brackets": ["error", "always"],
        "object-curly-spacing": ["error", "always"],
        "indent": ["error", 2],
        "react/prop-types": 0
    }
}
